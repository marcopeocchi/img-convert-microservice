{
  "openapi": "3.0.3",
  "info": {
    "title": "Swagger Fuku - OpenAPI 3.0",
    "description": "This is a simple microservice for on-the-fly PDF conversion to images based on the OpenAPI 3.0 specification.\nEverything is processed in-memory and no file is written to disk.",
    "termsOfService": "http://swagger.io/terms/",
    "contact": {
      "email": "marco.piovanello@gmail.com"
    },
    "license": {
      "name": "Mozilla Public License 2.0",
      "url": "https://www.mozilla.org/en-US/MPL/2.0/"
    },
    "version": "1.0.11"
  },
  "externalDocs": {
    "description": "Find out more this project",
    "url": "https://github.com/marcopeocchi/pdf-convert-microservice"
  },
  "servers": [
    {
      "url": "/api/v1"
    }
  ],
  "tags": [
    {
      "name": "pdf",
      "description": "PDF to image conversion"
    }
  ],
  "paths": {
    "/convert": {
      "post": {
        "tags": [
          "pdf"
        ],
        "summary": "Converts a the first page of PDF file to an image",
        "description": "The file sile limit is 10MB. Read and write timeouts are both set to 5 seconds",
        "operationId": "convert",
        "parameters": [
          {
            "in": "query",
            "name": "format",
            "schema": {
              "type": "string",
              "enum": [
                "avif",
                "jpeg",
                "png",
                "webp",
                "tiff",
                "gif"
              ],
              "default": "webp"
            },
            "required": true,
            "description": "Output format of the image"
          },
          {
            "in": "query",
            "name": "quality",
            "schema": {
              "type": "integer",
              "default": 85
            },
            "required": true,
            "description": "Quality of the output image"
          }
        ],
        "requestBody": {
          "description": "A valid PDF needs to be provided",
          "content": {
            "application/pdf": {
              "schema": {
                "type": "string",
                "format": "binary"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "image/jpeg": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              },
              "image/avif": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              },
              "image/gif": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              },
              "image/png": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              },
              "image/webp": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              },
              "image/tiff": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input"
          }
        }
      }
    }
  }
}